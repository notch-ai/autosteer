{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/adapters/*": ["src/adapters/*"],
      "@/interfaces/*": ["src/interfaces/*"],
      "@/application/*": ["src/application/*"],
      "@/usecases/*": ["src/usecases/*"],
      "@/app/*": ["src/app/*"],
      "@/components/*": ["src/components/*"],
      "@/views/*": ["src/views/*"],
      "@/services/*": ["src/services/*"],
      "@/styles/*": ["src/styles/*"],
      "@/stores/*": ["src/stores/*"],
      "@/commons/*": ["src/commons/*"],
      "@/types/*": ["src/types/*"],
      "@/hooks/*": ["src/hooks/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "vite.config.ts",
    "vite.main.config.ts",
    "vite.preload.config.ts",
    "vite.renderer.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out",
    "tests/unit",
    "tests/integration",
    "tests/performance",
    "tests/e2e",
    "tests/__mocks__",
    "tests/setup.ts",
    "tests/setup-theme.ts",
    "**/*.stories.tsx",
    "**/*.test.tsx",
    "**/*.test.ts",
    "tests/*.test.*",
    "src/main/**/*",
    "**/__mocks__/**/*",
    "**/__tests__/**/*"
  ]
}