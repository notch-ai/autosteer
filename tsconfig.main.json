{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": ["node", "electron"],
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "include": [
    "src/main/**/*",
    "src/services/**/*",
    "src/types/**/*",
    "src/commons/**/*",
    "src/entities/**/*",
    "src/constants/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out",
    "tests",
    "**/*.stories.tsx",
    "**/*.test.tsx"
  ]
}